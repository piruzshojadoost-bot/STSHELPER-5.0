  "translationRules": {
    "swedish_to_signlanguage": [
      {
        "pattern": "subjekt verb objekt",
        "tsl_pattern": "KONTEXT VERB OBJEKT",
        "example": "Jag läser boken → JAG LÄSA BOK"
      },
      {
        "pattern": "verb med riktning",
        "tsl_pattern": "PERSON1 GE→PERSON2 OBJEKT",
        "example": "Jag gav honom boken → JAG GE DÄR BOK"
      },
      {
        "pattern": "fråga",
        "tsl_pattern": "FRÅGEORD... [frågande ansiktssignal]",
        "example": "Vad heter du? → VAD HETA DU [frågande ansiktssignal]"
      },
      {
        "pattern": "negation",
        "tsl_pattern": "... INTE... [huvudskakning + negativ ansiktssignal]",
        "example": "Jag vill inte → JAG VILJA INTE [negativ ansiktssignal]"
      },
      {
        "pattern": "tidsord först",
        "tsl_pattern": "TIDSORD ... RESTEN AV MENINGEN",
        "example": "Igår gick jag till skolan → IGÅR JAG GÅ SKOLA"
      }
    ]
  }
